@model List<UdemyMvcPortfolio.Models.Entity.User>
@{
    ViewBag.Title = "Kullanıcı Listesi Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı Adı</th>      
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Username</td>
        
            <td><a href="/User/DeleteUser/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/User/UpdateUser/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<br />
<a href="/User/AddUser/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>

