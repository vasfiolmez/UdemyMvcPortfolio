@model List<UdemyMvcPortfolio.Models.Entity.Certificates>
@{
    ViewBag.Title = "Sertifika Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="card-header p-2">
                    <div class="card-body">
                        <div class="tab-pane">


                            <div class="timeline timeline-inverse">
                                @foreach (var item in Model)
                                {
                                    <div class="time-label">
                                        <a href="/Certificates/UpdateCertificate/@item.ID" class="btn btn-success">
                                        <span>  @item.Date  </span>
                                        </a>

                                        <div class="timeline-item">

                                            <div class="timeline-body">
                                                @item.Description
                                            </div>

                                        </div>
                                    </div>

                                    <div>


                                    </div>
                            }
                                </div>

                            </div>
                    </div>
                        <a href="/Certificates/AddCertificate/" class="btn btn-outline-info">Yeni Sertifika Ekle</a>


                        </div>
                    </div>

                </div>
            </div>
        </section>
    </body>
</html>

