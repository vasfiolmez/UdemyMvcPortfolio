@model UdemyMvcPortfolio.Models.Entity.Skills
@{
    ViewBag.Title = "Yetenek Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">

    @Html.HiddenFor(x => x.SkillId)


    <label> Yetenek Başlığı</label>
    @Html.TextBoxFor(x => x.Skill, new { @class = "form-control" })
    <br />

    <label>Yetenek Oran</label>
    @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
    <br />

    <button class="btn btn-info"> Güncelle</button>

</form>

